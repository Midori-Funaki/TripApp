{{#flight_result}}
<li class="list-group-item swappable-block">
    <h5 class="swappble-block-title-flight">
        Flight
    </h5>
    <i class="fa fa-times fa-1x delete-activity"></i>

    <div class="swappble-block-content-flight">
        {{#each route}}

            <a href="/flight-edit" class="transit-title"> {{cityFrom}} to {{cityTo}} </a>
            
            <div class="transit-route-info">
                <span>{{flight_no}}</span>
                {{#ifCond cityFrom ../cityFrom}}
                    <span style="margin: 20px;">{{../fly_duration}}</span>
                {{else}}
                    <span style="margin: 20px;">{{../return_duration}}</span>
                {{/ifCond}}
            </div>
        {{/each}}
    </div>
    <input type="hidden" value={{JSON2string ../this}}>
</li>
{{/flight_result}}
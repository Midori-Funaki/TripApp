<section id="trip-schedule">
    <div class="trip-title-details">
        <br>
        <br>
        <h4 id="trip-name">Okinawa Trip</h4>
        <hr>
    </div>
    <div class="trip-container-box">
        {{#each eachTripDay}}
            <div id={{this}}>
                <h4>{{this}}</h4>
                <div class="trip-container">
                    <div class="btn-cointainer">
                        <form class="container-form" method="GET" action="/search-hotels/{{this}}">
                            <input id="{{this}}-search-hotel" class="btn btn-primary select-hotel" type="submit" value="Hotel"/>
                        </form>
                        <a class="btn btn-primary select-transportation" href="/transportation">Transportation</a>
                        <button class="btn btn-primary select-locations">Locations</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <div id="2018-10-10">
        <h4>2018-10-10-Mon</h4>
        <div class="trip-container">
            <div class="activity-container col-xs-10">
                <div class="block signseeing-block">
                    <button class="btn btn-warning">
                        <i class="fa fa-camera fa-2x" aria-hidden="true"></i>
                        <p>Naha City</p>
                    </button>
                </div>
                <div class="block transit-block">
                    <button class="btn btn-danger">
                        <i class="fa fa-subway fa-2x" aria-hidden="true"></i>
                        <p>To Airport</p>
                    </button>
                </div>
                <div class="block signseeing-block">
                    <button class="btn btn-warning">
                        <i class="fa fa-shopping-bag fa-2x" aria-hidden="true"></i>
                        <p>Okinawa</p>
                    </button>
                </div>
                <div class="block transit-block">
                    <button class="btn btn-danger">
                        <i class="fa fa-bus fa-2x" aria-hidden="true"></i>
                        <p>To Shuri Castle</p>
                    </button>
                </div>
                <div class="block signseeing-block">
                    <button class="btn btn-warning">
                        <i class="fa fa-cutlery fa-2x" aria-hidden="true"></i>
                        <p>Okinawa</p>
                    </button>
                </div>
                <div class="block transit-block">
                    <button class="btn btn-danger">
                        <i class="fa fa-plane fa-2x" aria-hidden="true"></i>
                        <p>To Tokyo</p>
                    </button>
                </div>
                <div class="block hotel-block">
                    <button class="btn btn-primary">
                        <i class="fa fa-hotel fa-2x" aria-hidden="true"></i>
                        <p>Ibis</p>
                    </button>
                </div>
            </div>
            <div class="btn-cointainer col-xs-2">
                <!-- This form had clss="container-form" -->
                <button class="btn btn-warning select-locations">Places ++</button>
                <a class="btn btn-danger select-transportation" href="/transportation">Transit ++</a>
                <form method="GET" action="/search-hotels/2018-10-10">
                    <input id="2018-10-10-search-hotel" class="btn btn-primary select-hotel" type="submit" value="Hotel ++"/>
                </form>
            </div>
        </div>
    </div>
    <br>
    <div class="trip-add-new">
        <div class="trip-container">
            <div class="btn-cointainer">
                <button class="btn btn-primary">+ Add New Day</button>
            </div>
        </div>
    </div>
</section>

